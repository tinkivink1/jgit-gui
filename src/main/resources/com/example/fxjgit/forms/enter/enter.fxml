<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>



<BorderPane fx:id="rootNode" prefHeight="720" prefWidth="1080" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.example.fxjgit.forms.enter.EnterController" stylesheets="/com/example/fxjgit/styles/github-like-style.css">
    <top>
        <HBox fx:id="menuHbox">
            <!--            <fx:include source="tools-menu.fxml" fx:id="toolsMenu"/>-->
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER">
            <VBox spacing="10"
                  style="-fx-padding: 25"
                  alignment="CENTER">

                <Label text="Добро пожаловать!" fx:id="getStartedLabel"/>
                <Button text="Залогиниться"
                        onAction="#loginButtonClicked"
                        fx:id="loginButton"
                        VBox.vgrow="ALWAYS"
                        maxWidth="Infinity"/>
                <Button text="Зарегистрироваться"
                        onAction="#registerButtonClicked"
                        fx:id="registerButton"
                        VBox.vgrow="ALWAYS"
                        maxWidth="Infinity"/>
                <Button text="Войти без учетной записи"
                        onAction="#enterButtonClicked"
                        fx:id="enterButton"
                        VBox.vgrow="ALWAYS"
                        maxWidth="Infinity"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>