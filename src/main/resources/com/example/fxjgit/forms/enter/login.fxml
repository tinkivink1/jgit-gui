    <top>
        <HBox fx:id="menuHbox">
            <!--            <fx:include source="tools-menu.fxml" fx:id="toolsMenu"/>-->
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 25">
